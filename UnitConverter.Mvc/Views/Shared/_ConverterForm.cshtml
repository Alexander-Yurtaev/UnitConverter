@model UnitConverter.Mvc.Models.FormModel

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Convert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UnitFrom" class="control-label"></label>
                <select asp-for="UnitFrom" 
                        asp-items="@(new SelectList(Model.UnitItems, "Id", "Name"))"
                            class="form-control">
                    <option>Select Unit From</option>
                </select>
                <span asp-validation-for="UnitFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitTo" class="control-label"></label>
                <select asp-for="UnitTo" 
                        asp-items="@(new SelectList(Model.UnitItems, "Id", "Name"))"
                        class="form-control">
                    <option>Select Unit To</option>
                </select>
                <span asp-validation-for="UnitTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueFrom" class="control-label"></label>
                <input asp-for="ValueFrom" class="form-control" />
                <span asp-validation-for="ValueFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Convert" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
